{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "./*"
      ],
      "@nuxt/*": [
        "./apps/nuxt/src/*"
      ],
    }
  },
  "include": [
    "./apps/**/*.ts",
    "./apps/**/*.vue"
  ],
  "exclude": [
    "scripts",
    "node_modules",
  ]
}